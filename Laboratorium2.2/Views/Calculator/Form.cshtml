<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-6">
            <h2>Kalkulator</h2>
            <form action="/Calculator/Result" method="GET">
                <div class="mb-3">
                    <label class="form-label" for="x">Liczba 1</label>
                    <input class="form-control" type="number" name="x" step="0.00001" id="x" required />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="operator">Operator</label>
                    <select class="form-select" name="op" id="operator" required>
                        <option value="add">+</option>
                        <option value="sub">−</option>
                        <option value="mul">×</option>
                        <option value="div">÷</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="y">Liczba 2</label>
                    <input class="form-control" type="number" name="y" step="0.00001" id="y" required />
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary" type="submit">Oblicz</button>
                </div>
            </form>
        </div>
    </div>
</div>
